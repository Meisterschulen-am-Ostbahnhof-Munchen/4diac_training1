	<FunctionBody>
		<ST><![CDATA[PACKAGE signalprocessing;

(* Scaling Function Block *)
FUNCTION SCALE : REAL
VAR_INPUT
	IN : REAL;
	MAX1 : REAL;
	MIN1 : REAL;
	MAX2 : REAL;
	MIN2 : REAL;
END_VAR

SCALE := (IN - MIN1) * (MAX2 - MIN2) / (MAX1 - MIN1) + MIN2;

END_FUNCTION

]]></ST>
