	<FunctionBody>
		<ST><![CDATA[PACKAGE logiBUS::utils::dyn_arr;

(* Array Average *)
FUNCTION AVG : REAL

VAR_IN_OUT
	A : ARRAY[*] OF INT; // Input
END_VAR

VAR_TEMP
	i : INT;
	sum : DINT;
	count : INT;
END_VAR

sum := 0;

FOR i := LOWER_BOUND(A,1) TO UPPER_BOUND(A,1) DO
	sum := sum + A[i];
END_FOR;
count := UPPER_BOUND(A, 1) - LOWER_BOUND(A, 1) + 1;
AVG := DINT_TO_REAL(sum) / INT_TO_REAL(count);

END_FUNCTION

]]></ST>
	</FunctionBody>
