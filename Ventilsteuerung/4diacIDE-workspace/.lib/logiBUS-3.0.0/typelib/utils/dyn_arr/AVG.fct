	<InterfaceList>
		<EventInputs>
			<Event Name="REQ" Type="Event">
				<With Var="A"/>
			</Event>
		</EventInputs>
		<EventOutputs>
			<Event Name="CNF" Type="Event">
				<With Var=""/>
				<With Var="A"/>
			</Event>
		</EventOutputs>
		<OutputVars>
			<VarDeclaration Name="" Type="REAL"/>
		</OutputVars>
		<InOutVars>
			<VarDeclaration Name="A" Type="INT" Comment="Input" ArraySize="*"/>
		</InOutVars>
