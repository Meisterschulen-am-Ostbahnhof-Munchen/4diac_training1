	<FunctionBody>
		<ST><![CDATA[PACKAGE logiBUS::utils::dyn_arr;

(* Array Maximum *)
FUNCTION ARR_MAX : INT

VAR_IN_OUT
	A : ARRAY[*] OF INT; // Input
END_VAR

VAR_TEMP
	i : INT;
	currentMax : INT;
END_VAR

i := LOWER_BOUND(A, 1);
currentMax := A[i];
FOR i := LOWER_BOUND(A,1) + 1 TO UPPER_BOUND(A,1) DO
	currentMax := MAX(A[i], currentMax);

END_FOR;
ARR_MAX := currentMax;

END_FUNCTION

]]></ST>
	</FunctionBody>
