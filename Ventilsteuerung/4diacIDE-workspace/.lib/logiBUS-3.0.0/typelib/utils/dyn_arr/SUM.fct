	<FunctionBody>
		<ST><![CDATA[PACKAGE logiBUS::utils::dyn_arr;

(* Array Sum *)
FUNCTION SUM : DINT

VAR_IN_OUT
	A : ARRAY[*] OF INT; // Input
END_VAR

VAR_TEMP
	i : INT;
	sum2 : DINT;
END_VAR

sum2 := 0;

FOR i := LOWER_BOUND(A,1) TO UPPER_BOUND(A,1) DO
	sum2 := sum2 + A[i];
END_FOR;

SUM := sum2;

END_FUNCTION

]]></ST>
	</FunctionBody>
